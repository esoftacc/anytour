	<% if f.object.image? %>
		<div style=" width: 20%; border: 1px solid rgba(0,0,0,0.2); padding: 10px; display: inline-block; overflow: hidden;">
			<%= f.label :title, "Титл картинки:" %>
			<%= f.text_field :title, style: "width: 100%;" %><br><br>
			<div style="text-align: center; ">
				<p>
				<%= image_tag f.object.image.url(:mini), class: "img-thumbnail", style: "max-height: 99px;" %><br>
				<%= f.check_box :_destroy %>
				<%= f.label 'Удалить' %>
				</p>
			</div>
		</div>
	<% else %>
		<div style="width: 25%; border: 1px solid rgba(0,0,0,0.2); padding: 10px; margin: 20px 0 20px 0; overflow: hidden;">
			<%= f.label :title, "Титл картинки:" %><br>
			<%= f.text_field :title %><br>
			<%= f.file_field :image %>		
		</div>
	<% end %>   

