<%= form_for @question, :html => { :class => "form-horizontal question" } do |f| %>

    <% if @question.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, 'Ваш Email:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, 'Ваше имя:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :title, 'Заголовок:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :body, 'Опишите ваш вопрос:', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'form-control' %>
    </div>
    <%= error_span(@question[:body]) %>
  </div>


  <%= f.submit 'Отправить', :class => 'btn btn-primary' %>

<% end %>
