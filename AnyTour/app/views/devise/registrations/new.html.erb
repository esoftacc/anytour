<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group ">
  <span class="input-group-addon" id="basic-addon1">@</span>
  <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "   邮箱", :'aria-describedby' => "basic-addon1" %>
  </div><br />

  <div class="input-group ">
    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-key"></i></span>
    <% if @validatable %>
    <% @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "   设定密码", :'aria-describedby' => "basic-addon1" %>
  </div><br />

  <div class="input-group ">
    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-ellipsis-h"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "   确认密码", :'aria-describedby' => "basic-addon1" %>
  </div><br />

  <div class="actions">
    <%= f.submit "提交注册", :class => "btn btn-primary" %>
  </div><br />
<% end %>

<%= render "devise/shared/links" %>
